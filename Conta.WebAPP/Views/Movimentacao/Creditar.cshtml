@model Conta.Application.ViewModels.MovimentacaoModel

@{
    ViewData["Title"] = "Creditar Valor Conta Corrente";
}

<br /><br /><br />
<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Creditar Valor na Conta Corrente :  @Html.DisplayFor(model => model.ContaId)</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="SaveOrEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>

                        <input type="hidden" asp-for="ContaId" />
                    </div>

                    <div class="form-group">
                        <div class="text-right">
                            <a asp-action="Index" asp-controller="ContaCorrente" class="btn btn-danger">
                                <span class="glyphicon glyphicon-triangle-left"></span> Voltar
                            </a>
                            <button type="submit" value="Pesquisar" class="btn btn-success">
                                <span class="glyphicon glyphicon-floppy-open"></span> Salvar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
