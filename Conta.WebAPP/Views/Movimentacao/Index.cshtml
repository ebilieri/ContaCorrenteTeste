@model IEnumerable<Conta.Application.ViewModels.MovimentacaoModel>

@{
    ViewData["Title"] = "Histórico Conta Corrente";
}

<br /><br /><br />
<div class="panel panel-primary">

    <div class="panel-heading panel-head">
        Histórico da Conta Corrente :  @Context.Request.Query["IdConta"]
    </div>

    <div class="panel-body">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ContaId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataMovimentacao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoOperacao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Valor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValorAtual)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContaId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataMovimentacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoOperacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorAtual)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<div class="text-right">
    <a asp-action="Index" asp-controller="ContaCorrente" class="btn btn-danger">
        <span class="glyphicon glyphicon-triangle-left"></span> Voltar
    </a>
</div>

